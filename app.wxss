}
page {
  background-color: #f6f6f6;
}
cover-view{
white-space: pre-wrap !important;

}
.share {
  background: #fff;
  padding: 0;
  height: 36rpx;
  line-height: 36rpx;
  color: rgb(128, 128, 128);
  font-size: 24rpx;
  display: flex;
}

.share::after {
  border: none;
}
button::after{
  border: none;
}
.share image {
  width: 32rpx !important;
  height: 32rpx !important;
}

.clearBtn {
  background: #fff;
  margin: 0;
}

.clearBtn::after {
  border: none;
}

.collect {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 15rpx;
  right: 25rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  padding: 15rpx;
}

movable-view {
  pointer-events: auto;
}

movable-area {
  pointer-events: none;
}

.more {
  color: #666;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  margin-right: -10rpx;
  font-weight: normal;
}

