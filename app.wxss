.redBtn{
  background: #c70304;
  color: #fff;
  border-radius: 5rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
}
.radius50{
  border-radius: 50rpx
}
.scoreStyle{
  font-size: 20rpx;
padding: 2rpx 10rpx;
