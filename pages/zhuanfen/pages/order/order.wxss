/* pages/order/order.wxss */
.wrap{
  padding: 50rpx;
background: #fff;

}
.back{
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx 20rpx #e3e3e3;
  width: calc(100vw - 100rpx);
  height: calc(100vh - 100rpx);

}
.fixed{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left:0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item{
  width: 300rpx;
height: 300rpx;
border-radius: 50%;
background: rgba(255,255,255,0.7);
text-align: center;
padding: 50rpx;
box-shadow: 0 0 10rpx 10rpx #ffff inset;

}
.itemText{
  margin-top: 20rpx;
  text-align: center;
   
}
.item image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
